# Database Selection
# Options: "postgres" or "oracle"
DATABASE_TYPE=postgres

# General Settings
ASPNETCORE_ENVIRONMENT=Development
USE_ORACLE=false

# PostgreSQL Configuration
POSTGRES_DB=invoices_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
POSTGRES_CONNECTION=Host=postgres;Database=invoices_dev;Username=postgres;Password=postgres

# Oracle Configuration
ORACLE_PASSWORD=Oracle123
ORACLE_CHARACTERSET=AL32UTF8
ORACLE_PORT=1521
ORACLE_CONNECTION=User Id=system;Password=Oracle123;Data Source=oracle:1521/XE

# Invoices Service
INVOICES_PORT=3002
CUSTOMERS_API_URL=http://host.docker.internal:3001

# PGAdmin (optional - only for dev)
PGADMIN_EMAIL=admin@invoices.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
